<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="BOTTOM_RIGHT" onMouseClicked="#openFile" stylesheets="@../res/css/sendedmessage.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.SendedFileController">
   <children>
      <VBox maxWidth="345.0" mouseTransparent="true" spacing="1.0" style="-fx-border-color: derive(#4359ab,100%); -fx-border-radius: 0.6em 0.9em 0.9em 0em;">
         <children>
            <HBox alignment="CENTER" mouseTransparent="true" spacing="3.0" VBox.vgrow="ALWAYS">
               <children>
                  <ImageView fitHeight="34.0" fitWidth="38.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../res/img/file.png" />
                     </image>
                  </ImageView>
                  <VBox alignment="CENTER_RIGHT" mouseTransparent="true" spacing="5.0">
                     <children>
                        <Label fx:id="filename" mouseTransparent="true" text="Test avec un moyen text" wrapText="true">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="date" mouseTransparent="true" text="17:08" textFill="#727171" />
                     </children>
                     <padding>
                        <Insets top="3.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
      </VBox>
   </children>
</HBox>
